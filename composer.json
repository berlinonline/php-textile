{
    "name": "netcarver/textile-website",
    "description": "Textile markup language parser",
    "license": "BSD-3-Clause",
    "type": "project",
    "homepage": "https://github.com/textile/php-textile",
    "keywords": ["php-textile", "website"],
    "support": {
        "issues": "https://github.com/textile/php-textile/issues",
        "source": "https://github.com/textile/php-textile/tree/website"
    },
    "autoload": {
        "psr-4": {
            "Netcarver\\Textile\\Website\\": "src/"
        }
    },
    "require": {
        "sculpin/sculpin": "2.1.*@dev",
        "dflydev/embedded-composer": "@dev",
        "composer/composer": "@dev",
        "phpdocumentor/phpdocumentor": "2.9.*",
        "jms/serializer": ">=0.12 < 1.8.0"
    },
    "scripts": {
        "post-install-cmd": [
            "npm install",
            "@docs-download",
            "@build"
        ],
        "post-update-cmd": [
            "npm update",
            "@docs-download",
            "@build"
        ],
        "docs-download": [
            "rm -rf .php-textile && git clone https://github.com/textile/php-textile.git .php-textile"
        ],
        "docs-generate": [
            "./vendor/bin/phpdoc",
            "@php scripts/generate-docs.php"
        ],
        "sculpin-generate": [
            "./vendor/bin/sculpin generate"
        ],
        "build": [
            "@docs-generate",
            "@sculpin-generate",
            "npm run-script build"
        ]
    }
}
